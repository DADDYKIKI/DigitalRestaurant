<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signupSubmtBtn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/uktwo"
    tools:context=".Authentications.SignupPage">

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/terminator"
        app:layout_constraintStart_toStartOf="parent" />


    <EditText
        android:id="@+id/signupNameV"
        android:layout_width="207dp"
        android:layout_height="31dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/homekeyback"
        android:ems="10"
        android:hint="Choose a username"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.519"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/signupEmailV"
        android:layout_width="207dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/homekeyback"
        android:ems="10"
        android:hint="Enter Email"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signupNameV" />

    <EditText
        android:id="@+id/signupAge"
        android:layout_width="207dp"
        android:layout_height="31dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/homekeyback"
        android:ems="10"
        android:hint="Enter Age"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.539"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signupEmailV" />

    <EditText
        android:id="@+id/signUpPhone"
        android:layout_width="207dp"
        android:layout_height="31dp"
        android:layout_margin="25dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/homekeyback"
        android:ems="10"
        android:hint="Enter Phone Number"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.539"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signupAge"
        tools:ignore="MissingConstraints,NotSibling" />

    <EditText
        android:id="@+id/enterMaidenName"
        android:layout_width="207dp"
        android:layout_height="31dp"
        android:layout_margin="25dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/homekeyback"
        android:ems="10"
        android:hint="Enter maiden name"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.539"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signUpPhone"
        tools:ignore="MissingConstraints,NotSibling" />

    <EditText
        android:id="@+id/enterCountry"
        android:layout_width="207dp"
        android:layout_height="31dp"
        android:layout_margin="25dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/homekeyback"
        android:ems="10"
        android:hint="Enter your country"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterMaidenName"
        tools:ignore="MissingConstraints,NotSibling" />

    <EditText
        android:id="@+id/signUpPassV3"
        android:layout_width="207dp"
        android:layout_height="31dp"
        android:layout_margin="25dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/homekeyback"
        android:ems="10"
        android:hint="Choose Password"
        android:inputType="textPassword"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterCountry"
        tools:ignore="MissingConstraints,NotSibling" />

    <Button
        android:id="@+id/signSubBtnV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="176dp"
        android:background="@color/purple_200"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signUpPassV3"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>