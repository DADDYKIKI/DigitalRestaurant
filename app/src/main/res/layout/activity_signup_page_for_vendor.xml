<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signupSubmtBtn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/obandefriedrice"
    tools:context=".Authentications.SignupPage">


    <EditText
        android:id="@+id/signupNameV"
        android:layout_width="247dp"
        android:layout_height="47dp"
        android:layout_marginTop="136dp"
        android:background="@drawable/homekeyback"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/signupEmailV"
        android:layout_width="247dp"
        android:layout_height="47dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/homekeyback"
        android:ems="10"
        android:hint="Enter email"
        android:textColorHint="#87ceeb"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signupNameV" />

    <EditText
        android:id="@+id/signUpPassword"
        android:layout_width="247dp"
        android:layout_height="47dp"
        android:layout_margin="25dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/homekeyback"
        android:ems="10"
        android:hint="Choose password"
        android:textColorHint="#87ceeb"
        android:inputType="textPassword"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signupEmailV"
        tools:ignore="MissingConstraints,NotSibling" />

    <Button
        android:id="@+id/signSubBtnV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="@color/purple_200"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signUpPassword"
        app:layout_constraintVertical_bias="0.07" />

</androidx.constraintlayout.widget.ConstraintLayout>