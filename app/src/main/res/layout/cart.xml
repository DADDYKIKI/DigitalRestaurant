<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/restaurantbackground">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout4"
            android:layout_width="419dp"
            android:layout_height="76dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="413dp"
                android:layout_height="57dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/cartTitle"
                    android:layout_width="156dp"
                    android:layout_height="33dp"
                    android:layout_marginStart="44dp"
                    android:background="@drawable/restaurantbackground"
                    android:text="My Basket"
                    android:textAlignment="center"
                    android:textColor="@color/purple_500"
                    android:textSize="30dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/homeKey"
                    android:layout_width="55dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/bordera2"
                    android:text="Home"
                    android:textAlignment="center"
                    android:textColor="@color/design_default_color_on_primary"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/menuKeyS"
                    android:layout_width="55dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bordera2"
                    android:text="Menu"
                    android:textAlignment="center"
                    android:textColor="@color/design_default_color_on_primary"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/homeKey"
                    app:layout_constraintHorizontal_bias="0.764"
                    app:layout_constraintStart_toEndOf="@+id/cartTitle"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/myRecycler"
            android:layout_width="423dp"
            android:layout_height="525dp"
            android:layout_marginTop="4dp"
            android:keepScreenOn="false"
            android:scrollbarSize="7dp"
            android:scrollbarStyle="outsideOverlay"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.538"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout4"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/myOrderPotion"
            android:layout_width="416dp"
            android:layout_height="183dp"
            android:background="@drawable/adakitchen"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ordering_container"
                android:layout_width="413dp"
                android:layout_height="185dp"
                android:background="@color/Whiteblue"
                android:backgroundTint="@color/purple_700"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout2"
                    android:layout_width="414dp"
                    android:layout_height="178dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/orderNationality"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="16dp"
                        android:text="Nigerian"
                        android:textColor="@color/redishorang"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/addToCartbtn"
                        android:layout_width="63dp"
                        android:layout_height="38dp"
                        android:layout_marginEnd="28dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/addtocartbtn"
                        android:padding="5dp"
                        android:text="Add to cart"
                        android:textAlignment="center"
                        android:textColor="@color/purple_700"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/priceOfItem"
                        android:layout_width="45dp"
                        android:layout_height="23dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="28dp"
                        android:text="Price:-"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/totalPrice"
                        app:layout_constraintEnd_toStartOf="@+id/poundSign"
                        app:layout_constraintHorizontal_bias="0.526"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/totalPrice"
                        android:layout_width="118dp"
                        android:layout_height="23dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="40dp"
                        android:text="Total Order Price:-"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/textView2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/orderPrice"
                        app:layout_constraintVertical_bias="1.0" />

                    <TextView
                        android:id="@+id/quantityTxt"
                        android:layout_width="54dp"
                        android:layout_height="42dp"
                        android:layout_marginEnd="24dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/restaurantbackground"
                        android:padding="5dp"
                        android:text="1"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/plusBtn" />

                    <TextView
                        android:id="@+id/plusBtn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="144dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/bordera2"
                        android:text="  +"
                        android:textColor="@color/white"
                        android:textSize="80dp"
                        android:textStyle="bold"
                        app:autoSizeTextType="uniform"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/minusBtn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/bordera2"
                        android:text="  -"
                        android:textColor="@color/white"
                        android:textSize="80dp"
                        android:textStyle="bold"
                        app:autoSizeTextType="uniform"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/quantityTxt" />

                    <TextView
                        android:id="@+id/orderFoodName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="28dp"
                        android:text="Jelof"
                        android:textAlignment="center"
                        android:textColor="@color/redishorang"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/orderNationality"
                        app:layout_constraintVertical_bias="0.1" />

                    <TextView
                        android:id="@+id/poundSign"
                        android:layout_width="20dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="72dp"
                        android:layout_marginBottom="88dp"
                        android:text="£"
                        android:textColor="@color/purple_200"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/textView2"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="82dp"
                        android:layout_height="23dp"
                        android:layout_marginBottom="16dp"
                        android:text="Quantity:"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/minusBtn"
                        app:layout_constraintHorizontal_bias="0.588"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/totalOrderPrice"
                        android:layout_width="29dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="144dp"
                        android:text="10"
                        android:textColor="@color/purple_200"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@+id/addToCartbtn"
                        app:layout_constraintTop_toBottomOf="@+id/orderPrice" />

                    <TextView
                        android:id="@+id/poundSign2"
                        android:layout_width="20dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="8dp"
                        android:text="£"
                        android:textColor="@color/purple_200"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@+id/totalOrderPrice"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toEndOf="@+id/totalPrice"
                        app:layout_constraintTop_toBottomOf="@+id/orderPrice" />

                    <TextView
                        android:id="@+id/orderPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:text="10"
                        android:textColor="@color/purple_200"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/poundSign"
                        app:layout_constraintEnd_toStartOf="@+id/orderFoodName"
                        app:layout_constraintHorizontal_bias="0.181"
                        app:layout_constraintStart_toEndOf="@+id/priceOfItem" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/adarestaurantcard"
                        android:layout_width="144dp"
                        android:layout_height="81dp"
                        android:background="@drawable/adachilledheineken"
                        app:layout_constraintEnd_toStartOf="@+id/orderNationality"
                        tools:layout_editor_absoluteY="-10dp">

                        <TextView
                            android:id="@+id/from"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="From"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/orderRestaurant"
                            app:layout_constraintHorizontal_bias="0.595"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="1.0" />

                        <TextView
                            android:id="@+id/orderRestaurant"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/clear"
            android:layout_width="91dp"
            android:layout_height="34dp"
            android:layout_marginTop="352dp"
            android:backgroundTint="@color/Ash"
            android:text="Clear"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/myOrderPotion"
            app:layout_constraintEnd_toStartOf="@+id/order"
            app:layout_constraintHorizontal_bias="0.935"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout4"
            app:layout_constraintVertical_bias="0.842" />

        <Button
            android:id="@+id/order"
            android:layout_width="91dp"
            android:layout_height="34dp"
            android:layout_marginTop="352dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/redishorang"
            android:text="Order"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/myOrderPotion"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout4"
            app:layout_constraintVertical_bias="0.842" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>