<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="236dp"
                    android:background="@drawable/obandekitchen2">

                    <TextView
                        android:id="@+id/menuKeyS"
                        android:layout_width="55dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="36dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/bordera2"
                        android:text="Menu"
                        android:textAlignment="center"
                        android:textColor="@color/design_default_color_on_primary"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/homeKey"
                        android:layout_width="55dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="16dp"
                        android:background="@drawable/bordera2"
                        android:text="Home"
                        android:textAlignment="center"
                        android:textColor="@color/design_default_color_on_primary"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/menuKeyS"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.075" />

                    <TextView
                        android:id="@+id/welcometxt"
                        android:layout_width="175dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="44dp"
                        android:layout_marginTop="56dp"
                        android:text="Welcome to"
                        android:textAlignment="center"
                        android:textColor="@color/Whiteblue"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@+id/stainlesslabel"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/stainlesslabel"
                        android:layout_width="176dp"
                        android:layout_height="34dp"
                        android:layout_marginEnd="36dp"
                        android:text="Obande Kitchen"
                        android:textAlignment="center"
                        android:textColor="@color/Whiteblue"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.316" />

                    <TextView
                        android:id="@+id/obandelocate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="272dp"
                        android:layout_marginBottom="8dp"
                        android:text="Location"
                        android:textColor="@color/Whiteblue"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/ObandeRestLocationAdd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="L2"
                        android:textColor="@color/Whiteblue"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.257"
                        app:layout_constraintStart_toEndOf="@+id/obandelocate" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/obandeKitchen"
                        android:layout_width="match_parent"
                        android:layout_height="500dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/floatingActionButton"
                        android:layout_width="51dp"
                        android:layout_height="51dp"
                        android:layout_marginEnd="28dp"
                        android:clickable="true"
                        app:backgroundTint="@color/redishorang"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.795"
                        app:srcCompat="@drawable/ic_baseline_add_chart_24" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>